{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "output_encoding": "json",
  "debug_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/v1/payment",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1/payment",
          "sd": "static",
          "method": "GET",
          "is_collection": true,
          "host": [
            "http://payment_service:8000"
          ],
          "mapping": {
            "collection": "checks"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/payment/add",
      "method": "POST",
      "output_encoding": "json",

      "backend": [
        {
          "url_pattern": "/v1/payment/add",
          "encoding": "safejson",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://payment_service:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/gateway",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1/gateway",
          "encoding": "json",
          "is_collection": true,
          "sd": "static",
          "method": "GET",
          "host": [
            "http://payment_gateway_service:8000"
          ],
          "mapping": {
            "collection": "payments"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/data",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/v1/gateway",
          "encoding": "safejson",
          "is_collection": true,
          "host": [
            "http://payment_gateway_service:8000"
          ],
          "mapping": {
            "collection": "payments"
          }
        },
        {
          "url_pattern": "/v1/payment",
          "encoding": "safejson",
          "is_collection": true,
          "host": [
            "http://payment_service:8000"
          ],
          "mapping": {
            "collection": "checks"
          }
        }
      ]
    }
  ]
}